{{ header_var }}
{{ repo_var['repo'] }}: {
{% for key in repo_var.keys()
              | list
              | difference( ['repo'] )
              | sort %}
{% if repo_var[key] in ['yes', 'no'] %}
  {{ key }}: {{ repo_var[key] }},
{% else %}
  {{ key }}: "{{ repo_var[key] }}",
{% endif %}
{% endfor %}
}

{% endif %}
{% endfor %}
{% for repo in repo_list | selectattr('enabled', '==', true) %}

[{{ repo['repo'] }}]
{% for key in repo.keys() | list | difference( ['repo', 'enabled'] ) %}
{% if repo[key] | type_debug == 'NoneType' %}
{{ key }}
{% elif repo[key] | type_debug == 'list' %}
{{ key }} = {{ repo[key] | join(' ') }}
{% else %}
{{ key }} = {{ repo[key] }}
{% endif %}
{% endfor %}
{% endfor %}

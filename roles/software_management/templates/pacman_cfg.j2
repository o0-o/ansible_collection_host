{{ header_var }}

[options]
{% for key in pkg_mgr_cfg_var %}
{% if pkg_mgr_cfg_var[key] | type_debug == 'NoneType' %}
{{ key }}
{% elif pkg_mgr_cfg_var[key] | type_debug == 'list' %}
{{ key }} = {{ pkg_mgr_cfg_var[key] | join(' ') }}
